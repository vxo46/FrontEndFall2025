.wiki-layout {
  display: grid;
  grid-template-columns: 1fr 3fr;  /* sidebar narrower, main wider */
  grid-template-areas:
    "header header"
    "sidebar article"
    "footer footer";
  gap: 16px;
  padding: 16px;
}

/* Assign grid areas */
.wiki-layout > header { grid-area: header; }
.wiki-layout > aside  { grid-area: sidebar; }
.wiki-layout > article{ grid-area: article; }
.wiki-layout > footer { grid-area: footer; }

/* Wikipedia-like styles */
.wiki-layout > * {
  background: #f8f9fa;          /* light gray */
  border: 1px solid #d3d3d3;    /* subtle border */
  border-radius: 4px;
  padding: 16px;
}

.wiki-layout > header { background:#e9ecef; font-weight:700; text-align:center; }
.wiki-layout > footer { background:#e9ecef; text-align:center; }
.wiki-layout > aside  { background:#fff; font-size:0.9em; }
.wiki-layout > article{ background:#fff; text-align:left; }

/* Responsive: stack on small screens */
@media (max-width: 700px) {
  .wiki-layout {
    grid-template-columns: 1fr;
    grid-template-areas:
      "header"
      "article"
      "sidebar"
      "footer";
  }
}
